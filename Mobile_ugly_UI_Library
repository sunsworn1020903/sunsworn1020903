local idk_is_that = {}

 function idk_is_that:NewWindow(Title)
     
local idk = Game.CoreGui:FindFirstChild("Anti-Abuse")  
if idk then
idk:remove()
end

local function notify(Text, Duration)
    game:GetService("StarterGui"):SetCore("SendNotification",{
 Title = "sun-Gui", 
 Text = Text,
 Duration = Duration,
})
    end

local Players = Game.Players
local plr = Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = Title
ScreenGui.Parent = Game.CoreGui

local Frame = Instance.new("Frame")
Frame.Name = "Frame"
Frame.Parent = ScreenGui
Frame.Draggable = true
Frame.Active = true
Frame.Size = UDim2.fromOffset(202, 303)
Frame.BackgroundColor3 = Color3.fromHex("04afec")

local TextLabel = Instance.new("TextLabel")
TextLabel.Name = "Title"
TextLabel.Parent = Frame
TextLabel.BackgroundColor3 = Color3.fromHex("ffff00")
TextLabel.BorderSizePixel = 0
TextLabel.Font = Enum.Font.GothamBold
TextLabel.Selectable = true
TextLabel.Size = UDim2.fromOffset(202, 16)
TextLabel.Text = Title
TextLabel.TextScaled = true
TextLabel.TextSize = 14
TextLabel.TextTruncate = Enum.TextTruncate.AtEnd
TextLabel.TextWrapped = true

local ScrollingFrame = Instance.new("ScrollingFrame")
ScrollingFrame.Name = "Container"
ScrollingFrame.Parent = Frame
ScrollingFrame.BackgroundTransparency = 1
ScrollingFrame.BorderSizePixel = 0
ScrollingFrame.Position = UDim2.fromOffset(0, 16)
ScrollingFrame.ScrollingDirection = Enum.ScrollingDirection.Y
ScrollingFrame.Size = UDim2.fromOffset(202, 261)
ScrollingFrame.AutomaticCanvasSize = "Y"

local openFrame = Instance.new("Frame")
openFrame.Name = "openFrame"
openFrame.Parent = ScreenGui
openFrame.Active = true
openFrame.Draggable = true
openFrame.Position = UDim2.fromOffset(570, 295)
openFrame.Size = UDim2.fromOffset(50, 20)

local openButton = Instance.new("TextButton")
openButton.Name = "openButton"
openButton.Parent = openFrame
openButton.Size = UDim2.fromOffset(50, 20)
openButton.Text = "Close"
openButton.MouseButton1Click:connect(function()
    if Frame.Visible == true then
Frame.Visible = false
openButton.Text = "Open"
elseif Frame.Visible == false then
Frame.Visible = true
openButton.Text = "Close"
end
end)

local UIListLayout = Instance.new("UIListLayout")
UIListLayout.Name = "UIListLayout"
UIListLayout.Parent = ScrollingFrame
UIListLayout.Padding = UDim.new(0, 5)

local idk_is_that_Button = {}

   function idk_is_that_Button:NewButton(Name, Text, callback)
       callback = callback or function() end
       Name = Name or "Button"
       Text = Text or "Button"
       
    local Button = Instance.new("TextButton")
    Button.Name = Name
    Button.Parent = ScrollingFrame
    Button.Text = Text
    Button.Size = UDim2.fromOffset(152, 21)
    Button.BackgroundColor3 = Color3.fromHex("04afec")
    Button.MouseButton1Click:connect(function()
        callback = callback
        end)
    end
return idk_is_that_Button
end

return idk_is_that


